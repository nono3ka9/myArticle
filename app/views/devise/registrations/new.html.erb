<h2 class="text-center mb-4 fw-bold">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%# エラーメッセージを表示 %>
  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード（6文字以上）", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
  </div>

  <%= f.submit "アカウント登録", class: "btn btn-success w-100 py-2 fw-bold" %>
<% end %>

<div class="text-center mt-3">
  <%= link_to "ログインページへ戻る", new_user_session_path, class: "d-block text-decoration-none" %>
</div>
