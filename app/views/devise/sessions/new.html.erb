<h2 class="text-center mb-4 fw-bold">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード", class: "form-label" %>
    <%= f.password_field :password, class: "form-control form-control-lg" %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :remember_me, class: "form-check-input" %>
    <%= f.label :remember_me, "ログイン情報を記憶する", class: "form-check-label" %>
  </div>

  <%= f.submit "ログイン", class: "btn btn-primary w-100 py-2 fw-bold" %>
<% end %>

<div class="text-center mt-3">
  <%= link_to "新規登録", new_user_registration_path, class: "d-block text-decoration-none" %>
  <%# <%= link_to "パスワードをお忘れですか？", new_user_password_path, class: "d-block text-decoration-none" %>
</div>
