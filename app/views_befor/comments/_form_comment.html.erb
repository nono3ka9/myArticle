<%= form_with(model: [article, Comment.new], local: true) do |f| %>
    <div class="mb-2">
        <%= f.label :commenter, "お名前", class: "form-label" %>
        <%= f.text_field :commenter, class: "form-control", maxlength: 50 %>
    </div>
    <div class="mb-2">
        <%= f.label :body, "コメント", class: "form-label" %>
        <%= f.text_area :body, class: "form-control", rows: 4, maxlength: 2000 %>
    </div>
    <%= f.submit "コメントを投稿", class: "btn btn-primary" %>
<% end %>